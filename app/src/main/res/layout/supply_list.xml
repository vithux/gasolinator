<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNomePosto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Text Posto"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNomePosto"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="Text PreÃ§o"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewQuilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewPreco"
        android:layout_alignStart="@+id/textViewPreco"
        android:layout_below="@+id/textViewPreco"
        android:layout_marginTop="3dp"
        android:text="Text Quilometros"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewLitros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewQuilometros"
        android:layout_alignStart="@+id/textViewQuilometros"
        android:layout_below="@+id/textViewQuilometros"
        android:layout_marginTop="3dp"
        android:text="Text Litros"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewPreco"
        android:layout_toEndOf="@+id/date"
        android:layout_toRightOf="@+id/date"
        android:text="Text Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewLitros"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Text Avg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textViewQuilometros"
        android:layout_toLeftOf="@+id/textViewQuilometros"
        android:layout_toStartOf="@+id/textViewQuilometros"
        android:src="@drawable/dolar" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textViewLitros"
        android:layout_toLeftOf="@+id/textViewQuilometros"
        android:layout_toStartOf="@+id/textViewQuilometros"
        android:src="@drawable/km" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textViewLitros"
        android:layout_toLeftOf="@+id/textViewLitros"
        android:layout_toStartOf="@+id/textViewLitros"
        android:src="@drawable/posto" />

    <ImageView
        android:id="@+id/date"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textViewPreco"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/textViewQuilometros"
        android:layout_toRightOf="@+id/textViewQuilometros"
        android:src="@drawable/date" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textViewQuilometros"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:src="@drawable/avg" />


</RelativeLayout>